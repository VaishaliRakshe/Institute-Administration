@model InstituteAdministration.ViewModels.AddStudentViewModel

<h1>Add a Student</h1>

<form asp-controller="Home" asp-action="ProcessAddStudentForm" method="post">
    <div class="form-group">
       <label asp-for="StudentName">Name</label>
        <input asp-for="StudentName" required />
        <span asp-validation-for="StudentName"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeacherID"> Teacher</label>
        <select asp-for="TeacherID" asp-items="@Model.AllTeachers"></select>
      <span asp-validation-for="TeacherID"></span>
    </div>
   @if (Model.AllCourses != null)
   {

    <div class="form-group">       
        
        @foreach (Course course in Model.AllCourses)
        {
        <label>@course.Name</label>
            <input type="checkbox" name="SelectedCourses"  value="@course.Id"/>
        }        
        
    </div>
   }
    <input type="submit" value="Add Student" />
</form>

<p>
    <a asp-controller="Teacher" asp-action="Add">Add Teacher</a>
     <a asp-controller="Course" asp-action="Add">Add Course</a>
</p>

