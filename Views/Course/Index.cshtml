@@model List<InstituteAdministration.Models.Course>

<h1>In-demand Skills</h1>

<p><a asp-controller="Course" asp-action="Add">Add a Course</a></p>

@if (Model.Count == 0)
{
    <p>No Courses are currently listed!</p>
}
else
{
    <div>
        <ul>
            @foreach (Course course in Model)
            {
                <li>
                    <a asp-controller="Course" asp-action="About" asp-route-id="@course.Id">@course.Name</a>
                </li>
            }
        </ul>
    </div>
}