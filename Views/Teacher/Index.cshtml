@model List<InstituteAdministration.Models.Teacher>

<h1>Teachers Currently Hiring</h1>

@if (Model.Count == 0)
{
    <p>No teachers are currently hiring!</p>
}
else
{
    <div>
        <ul>
            @foreach (Teacher teacher in Model)
            {
                <li>
                    <a asp-controller="Teacher" asp-action="About" asp-route-id="@teacher.Id">@teacher.Name</a>
                </li>
            }
        </ul>
    </div>
}